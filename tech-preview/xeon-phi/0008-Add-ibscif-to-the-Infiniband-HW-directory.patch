+static void ibscif_cq_tasklet(unsigned long cq_ptr)
+{
+	struct ibscif_cq *cq = (struct ibscif_cq *)cq_ptr;
+	cq->ibcq.comp_handler(&cq->ibcq, cq->ibcq.cq_context);
+}
