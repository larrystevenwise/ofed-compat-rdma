+static int setup_rma_addrs(struct ibscif_wq *wq, struct ibscif_wr *wr)
+{
+	struct ibscif_ds *ds;
+	int i;
+
+	if (!wr->num_ds)
+		return 1;
+
+	for (i=0; i<wr->num_ds; i++) {
+		ds = &wr->ds_list[i];
+		if (!ds->current_mreg) 
+			ds->current_mreg = ibscif_mr_get_mreg(ds->mr, wq->qp->conn);
+
+		if (!ds->current_mreg) 
+			return 0;
+	}
+
+	return 1;
+}
