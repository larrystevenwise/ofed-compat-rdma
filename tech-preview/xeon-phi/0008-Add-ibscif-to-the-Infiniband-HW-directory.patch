+static struct ibscif_wr* ibscif_wr_by_msg_id(struct ibscif_wq *wq, u32 msg_id)
+{
+	struct ibscif_wr *wr;
+	int size = wq->size;
+
+	if (!size)
+		return NULL;
+
+	wr = ibscif_get_wr(wq, msg_id % size);
+	if (wr->use_rma)
+		return (wr->rma_id == msg_id) ? wr : NULL;
+	else
+		return (wr->msg_id == msg_id) ? wr : NULL;
+}
