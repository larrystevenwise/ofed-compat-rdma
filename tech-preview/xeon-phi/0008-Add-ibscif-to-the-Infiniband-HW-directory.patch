+static void ibscif_move_wr(struct ibscif_wq *wq, struct ibscif_wr *new_wr, int new_size)
+{
+	int i;
+
+	if (wq->size == new_size)
+		return;
+
+	for (i = 0; i < wq->depth; i++) {
+		memcpy(&new_wr[i], &wq->wr[wq->head], wq->wr_size);
+		wq->head = (wq->head + 1) % wq->size;
+	}
+
+	if (wq->wr) {
+		vfree(wq->wr);
+	}
+
+	wq->wr   = new_wr;
+	wq->head = 0;
+	wq->tail = wq->depth;
+	wq->size = new_size;
+}
